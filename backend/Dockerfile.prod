FROM node:20-slim

WORKDIR /usr/src/app

# Install dependencies
COPY package*.json ./
RUN npm ci --only=production

# Copy source
COPY . .

# Generate Prisma Client
RUN npx prisma generate

# Build TypeScript
RUN npm run build

# Verify the build output
RUN ls -la dist/src/

EXPOSE 3000

# Use the correct path to the built server file
CMD ["node", "dist/src/server.js"]